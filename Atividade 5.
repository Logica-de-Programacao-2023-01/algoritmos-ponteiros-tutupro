package main

import "math"

// Escreva uma função em Go que receba um ponteiro
// para uma variável float64 e atualize o valor da variável para a média
// aritmética entre o seu valor atual e o valor da constante Pi.

func num(pon *float64, n float64) float64 {

	var resultado float64

	resultado = n + math.Pi / 2

	*pon = resultado

	return 0
}
func main() {
	
}

